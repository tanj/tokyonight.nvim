# Tokyonight color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers
#
# Tokyonight color theme
#
set notification-error-bg "#94bff3"
set notification-error-fg "#dcdccc"
set notification-warning-bg "#8cd0d3"
set notification-warning-fg "#3f3f3f"
set notification-bg "#4f4f4f"
set notification-fg "#dcdccc"
set completion-bg "#4f4f4f"
set completion-fg "#fffffd"
set completion-group-bg "#4f4f4f"
set completion-group-fg "#fffffd"
set completion-highlight-bg "#3f3f3f"
set completion-highlight-fg "#dcdccc"
set index-bg "#4f4f4f"
set index-fg "#dcdccc"
set index-active-bg "#3f3f3f"
set index-active-fg "#dcdccc"
set inputbar-bg "#4f4f4f"
set inputbar-fg "#dcdccc"
set statusbar-bg "#4f4f4f"
set statusbar-fg "#dcdccc"
set highlight-color "#8cd0d3"
set highlight-active-color "#cc9393"
set default-bg "#4f4f4f"
set default-fg "#dcdccc"
set render-loading true
set render-loading-fg "#4f4f4f"
set render-loading-bg "#dcdccc"
#
# Recolor mode settings
# <C-r> to switch modes
#
set recolor-lightcolor "#4f4f4f"
set recolor-darkcolor "#dcdccc"
